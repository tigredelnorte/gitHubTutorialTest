package demo1;

public class Leet7 {
	public static void main(String[] args) {
		System.out.println(reverse(1534236469));
		System.out.println(-123%10);
		System.out.println(Math.pow(2, 31));
	}
	 public static int reverse(int x) {
	        int xrev=0;
	        while(Math.abs(x)>0){
	           xrev = xrev*10+(x%10);
	           x=x/10; 
	       }
	        if(xrev>(Integer.MAX_VALUE/10)||xrev<(Integer.MIN_VALUE/10))
	            return 0;
	        else
		        return (int)xrev;
	    }
	 
}
