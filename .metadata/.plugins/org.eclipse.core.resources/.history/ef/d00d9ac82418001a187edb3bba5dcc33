package demo1;

public class Leet7 {
	public static void main(String[] args) {
		System.out.println(reverse(-2147483412));
		System.out.println(-123 % 10);
		System.out.println(Math.pow(2, 31)-1);
	}

	public static int reverse(int x) {
		int xrev = 0;
		int rest=0;
		while (Math.abs(x) > 0) {
			rest = x % 10;
			xrev = xrev * 10 + (rest);
			x = x / 10;
		}
		if (xrev > Integer.MAX_VALUE / 10 || (xrev == Integer.MAX_VALUE/10 && rest == 7))
			return 0;
		else if (xrev < Integer.MIN_VALUE / 10 || (xrev == Integer.MIN_VALUE/10 && rest == 8))
			return 0;
		else

			return (int) xrev;
	}

}
